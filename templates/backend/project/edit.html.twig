{% extends 'base.html.twig' %}

{% block title %}Modifier le Projet - {{ project.title }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-slateBlue flex">
    <!-- Sidebar identique à votre dashboard -->
    <aside class="w-64 bg-navy border-r border-white/10 hidden md:block">
        <div class="p-6 flex items-center gap-3">
            <img src="{{ asset('images/logo.png') }}" alt="InnoLearn" class="w-10">
            <h2 class="text-2xl font-bold text-white">InnoAdmin</h2>
        </div>
        <nav class="mt-6 px-4 space-y-2">
            <a href="{{ path('app_admin_dashboard') }}" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Dashboard</a>
            <a href="{{ path('app_backend_project_index') }}" class="block px-4 py-3 rounded-lg bg-indigo-600 text-white font-medium">Projets</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Événements</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Abonnements</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Utilisateurs</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Cours</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Opportunités</a>
            <a href="#" class="block px-4 py-3 rounded-lg text-slate-400 hover:bg-white/5 transition-colors">Settings</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">
        <header class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white inline-flex items-center">
                    <i class="fas fa-edit mr-3 text-amber-400"></i>Modifier le projet
                </h1>
                <p class="text-slate-400 mt-2">Modifiez les informations du projet ci-dessous</p>
            </div>
            <div class="flex space-x-4">
                <a href="{{ path('app_backend_project_index') }}" 
                   class="bg-slate-600 hover:bg-slate-700 text-white px-6 py-3 rounded-lg transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i>Retour
                </a>
                <a href="{{ path('app_backend_project_show', {'id': project.id}) }}" 
                   class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors inline-flex items-center">
                    <i class="fas fa-eye mr-2"></i>Voir
                </a>
            </div>
        </header>

        <!-- Carte du formulaire -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-navy border border-white/10 rounded-2xl shadow-lg overflow-hidden">
                <!-- En-tête de la carte -->
                <div class="bg-amber-600 px-8 py-6">
                    <h2 class="text-xl font-bold text-gray-900 inline-flex items-center">
                        <i class="fas fa-pencil-alt mr-3"></i>Modification du projet #{{ project.id }}
                    </h2>
                </div>
                
                <!-- Corps du formulaire -->
                <div class="p-8">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    
                    <!-- Titre du projet -->
                    <div>
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {
                            'class': 'w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-colors placeholder-slate-400' ~ (form.title.vars.errors|length ? ' border-red-500' : '')
                        }}) }}
                        {% if form.title.vars.errors %}
                            <div class="mt-2 text-red-400 text-sm flex items-center">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                {{ form_errors(form.title) }}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Description -->
                    <div>
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.description, {'attr': {
                            'class': 'w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-colors placeholder-slate-400 resize-none' ~ (form.description.vars.errors|length ? ' border-red-500' : ''),
                            'rows': 5
                        }}) }}
                        {% if form.description.vars.errors %}
                            <div class="mt-2 text-red-400 text-sm flex items-center">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Statut et Date début -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Statut -->
                        <div>
                            {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.status, {'attr': {
                                'class': 'w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-colors' ~ (form.status.vars.errors|length ? ' border-red-500' : '')
                            }}) }}
                            {% if form.status.vars.errors %}
                                <div class="mt-2 text-red-400 text-sm flex items-center">
                                    <i class="fas fa-exclamation-circle mr-2"></i>
                                    {{ form_errors(form.status) }}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Date début -->
                        <div>
                            {{ form_label(form.startDate, null, {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.startDate, {'attr': {
                                'class': 'w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-colors' ~ (form.startDate.vars.errors|length ? ' border-red-500' : '')
                            }}) }}
                            {% if form.startDate.vars.errors %}
                                <div class="mt-2 text-red-400 text-sm flex items-center">
                                    <i class="fas fa-exclamation-circle mr-2"></i>
                                    {{ form_errors(form.startDate) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Date fin -->
                    <div>
                        {{ form_label(form.endDate, null, {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.endDate, {'attr': {
                            'class': 'w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-colors' ~ (form.endDate.vars.errors|length ? ' border-red-500' : '')
                        }}) }}
                        {% if form.endDate.vars.errors %}
                            <div class="mt-2 text-red-400 text-sm flex items-center">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                {{ form_errors(form.endDate) }}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Boutons d'action -->
                    <div class="pt-6 border-t border-slate-700 flex justify-between">
                        <button type="reset" 
                                class="bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg transition-colors inline-flex items-center border border-slate-600">
                            <i class="fas fa-redo mr-2"></i>Réinitialiser
                        </button>
                        <button type="submit" 
                                class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-lg transition-colors inline-flex items-center font-medium shadow-lg hover:shadow-xl border border-emerald-700">
                            <i class="fas fa-save mr-3"></i>Mettre à jour
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
                
                <!-- Pied de page de la carte -->
                <div class="bg-slate-800 border-t border-slate-700 px-8 py-4">
                    <div class="flex justify-between items-center text-sm">
                        <div class="text-slate-400 inline-flex items-center">
                            <i class="fas fa-calendar mr-2"></i>
                            Créé le {{ project.createdAt|date('d/m/Y à H:i') }}
                        </div>
                        <div class="text-slate-400 inline-flex items-center">
                            <i class="fas fa-sync-alt mr-2"></i>
                            Dernière modification : {{ project.updatedAt ? project.updatedAt|date('d/m/Y à H:i') : 'Jamais' }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations supplémentaires -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
            <!-- Informations actuelles -->
            <div class="bg-navy border border-white/10 rounded-2xl p-6">
                <h3 class="text-lg font-bold text-white mb-4 inline-flex items-center">
                    <i class="fas fa-info-circle mr-2 text-blue-400"></i>Informations actuelles
                </h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-slate-400">Titre :</span>
                        <span class="text-white font-medium">{{ project.title }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-slate-400">Statut :</span>
                        <span class="text-white font-medium">
                            {% set status_text = {
                                'draft': 'Brouillon',
                                'active': 'Actif',
                                'completed': 'Terminé',
                                'cancelled': 'Annulé'
                            } %}
                            {{ status_text[project.status] ?? project.status }}
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-slate-400">Date début :</span>
                        <span class="text-white font-medium">{{ project.startDate|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-slate-400">Date fin :</span>
                        <span class="text-white font-medium">{{ project.endDate ? project.endDate|date('d/m/Y') : 'Non définie' }}</span>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="bg-navy border border-white/10 rounded-2xl p-6">
                <h3 class="text-lg font-bold text-white mb-4 inline-flex items-center">
                    <i class="fas fa-bolt mr-2 text-amber-400"></i>Actions rapides
                </h3>
                <div class="space-y-3">
                    <form method="post" 
                          action="{{ path('app_backend_project_delete', {'id': project.id}) }}" 
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');"
                          class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                        <button type="submit" 
                                class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-3 rounded-lg transition-colors inline-flex items-center justify-center border border-red-700">
                            <i class="fas fa-trash mr-2"></i>Supprimer ce projet
                        </button>
                    </form>
                    <a href="{{ path('app_backend_project_show', {'id': project.id}) }}" 
                       class="block bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg transition-colors inline-flex items-center justify-center border border-blue-700">
                        <i class="fas fa-eye mr-2"></i>Voir les détails complets
                    </a>
                    <a href="{{ path('app_backend_project_index') }}" 
                       class="block bg-slate-600 hover:bg-slate-700 text-white px-4 py-3 rounded-lg transition-colors inline-flex items-center justify-center border border-slate-700">
                        <i class="fas fa-list mr-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Styles supplémentaires -->
<style>
/* Style pour les champs de formulaire */
input, select, textarea {
    background-color: #1e293b !important; /* slate-800 */
    color: #ffffff !important;
    border-color: #475569 !important; /* slate-600 */
}

/* Style pour le focus */
input:focus, select:focus, textarea:focus {
    background-color: #1e293b !important;
    color: #ffffff !important;
    box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.3) !important; /* amber-500 avec opacité */
    border-color: #f59e0b !important; /* amber-500 */
}

/* Style pour les placeholders */
::placeholder {
    color: #94a3b8 !important; /* slate-400 */
}

/* Style pour les options des select */
option {
    background-color: #1e293b !important; /* slate-800 */
    color: #ffffff !important;
}

/* Style pour les dates */
input[type="date"]::-webkit-calendar-picker-indicator {
    filter: invert(1);
    opacity: 0.7;
    cursor: pointer;
}

/* Style pour les bordures d'erreur */
.border-red-500 {
    border-color: #ef4444 !important;
}

/* Style pour le header en ambre */
.bg-amber-600 {
    background-color: #d97706;
}

.bg-amber-600 h2 {
    color: #1f2937;
}

/* Style pour les boutons avec bordures */
button, a {
    border-width: 1px;
}
</style>

<!-- Script pour améliorer l'expérience utilisateur -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation pour les cartes
    const cards = document.querySelectorAll('.bg-navy.border');
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = '';
        });
    });
    
    // Confirmation pour la suppression
    const deleteForm = document.querySelector('form[action*="delete"]');
    if (deleteForm) {
        deleteForm.addEventListener('submit', function(e) {
            if (!confirm('⚠️ ATTENTION : Cette action est irréversible !\n\nÊtes-vous ABSOLUMENT sûr de vouloir supprimer le projet "{{ project.title }}" ?')) {
                e.preventDefault();
            }
        });
    }
    
    // Focus sur le premier champ du formulaire
    setTimeout(() => {
        const firstInput = document.querySelector('form input:not([type="hidden"]), form select, form textarea');
        if (firstInput) {
            firstInput.focus();
            // Si c'est un select, ouvrir la liste
            if (firstInput.tagName === 'SELECT') {
                firstInput.style.backgroundColor = '#1e293b';
            }
        }
    }, 100);
    
    // Améliorer les champs date
    const dateInputs = document.querySelectorAll('input[type="date"]');
    dateInputs.forEach(input => {
        // Ajouter un style personnalisé
        input.style.cursor = 'pointer';
        
        // S'assurer que la valeur est visible
        input.addEventListener('change', function() {
            this.style.color = '#ffffff';
        });
    });
    
    // Mettre en évidence la sidebar active
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('nav a');
    navLinks.forEach(link => {
        if (link.getAttribute('href') && currentPath.includes(link.getAttribute('href'))) {
            link.classList.add('bg-indigo-600', 'text-white');
            link.classList.remove('text-slate-400', 'hover:bg-white/5');
        }
    });
});
</script>
{% endblock %}