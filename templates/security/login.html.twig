{% extends 'base.html.twig' %}

{% block title %}Login - InnoLearn{% endblock %}

{% block navbar %}{% endblock %}
{% block footer_wave %}{% endblock %}

{% block body %}
<main class="auth-page" style="background: var(--bg-dark); min-height: 100vh; display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden;">
    <!-- Organic Background Blobs -->
    <div style="position: absolute; top: -10%; left: -10%; width: 40%; height: 60%; background: var(--gradient-hero); border-radius: 50%; filter: blur(100px); opacity: 0.4;"></div>
    <div style="position: absolute; bottom: -10%; right: -10%; width: 30%; height: 50%; background: var(--secondary); border-radius: 50%; filter: blur(100px); opacity: 0.3;"></div>

    <!-- Back to Home Button -->
    <a href="{{ path('app_home') }}" style="position: absolute; top: 2rem; left: 2rem; z-index: 100; display: flex; align-items: center; gap: 0.5rem; color: white; text-decoration: none; font-weight: 500; background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px); padding: 0.75rem 1.25rem; border-radius: 100px; border: 1px solid rgba(255, 255, 255, 0.1); transition: all 0.3s;">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
        Back to Home
    </a>

    <div class="auth-frame" style="position: relative; z-index: 1; max-width: 1000px; width: 90%; background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(25px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 40px; overflow: hidden; display: flex; box-shadow: 0 40px 100px rgba(0, 0, 0, 0.4);">
        <!-- Left Side: Lock Animation -->
        <div class="lock-side" style="flex: 1; padding: 4rem; display: flex; flex-direction: column; align-items: center; justify-content: center; background: rgba(255, 255, 255, 0.02); border-right: 1px solid rgba(255, 255, 255, 0.05);">
            <div class="lock-container" style="width: 220px; height: 220px; color: var(--primary-light); filter: drop-shadow(0 0 40px rgba(99, 102, 241, 0.3));">
                <svg id="login-lock" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
                    <path class="lock-shackle" d="M7 11V7C7 4.23858 9.23858 2 12 2C14.7614 2 17 4.23858 17 7V11" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" style="transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1); transform-origin: 17px 11px;"/>
                    <rect class="lock-body" x="5" y="11" width="14" height="10" rx="3" fill="currentColor"/>
                    <circle cx="12" cy="16" r="1.5" fill="rgba(255,255,255,0.8)"/>
                    <path d="M12 17.5V19" stroke="rgba(255,255,255,0.8)" stroke-width="1" stroke-linecap="round"/>
                </svg>
            </div>
            <div style="margin-top: 2rem; text-align: center;">
                <h2 style="color: white; font-size: 1.5rem; font-weight: 700; margin-bottom: 0.5rem;">Secure Access</h2>
                <p style="color: rgba(255, 255, 255, 0.5); font-size: 0.9rem;">Your data is protected with industrial-grade encryption.</p>
            </div>
        </div>

        <!-- Right Side: Form -->
        <div class="form-side" style="flex: 1.2; padding: 4rem;">
            <div style="text-align: center; margin-bottom: 2.5rem;">
                <h1 style="color: white; font-size: 2.25rem; font-weight: 800; margin-bottom: 0.75rem;">Sign In</h1>
                <p style="color: rgba(255, 255, 255, 0.6);">Welcome back! Please enter your details.</p>
            </div>

            <form method="post" class="auth-form" id="login-form">
                <div style="margin-bottom: 1.5rem;">
                    <label style="color: rgba(255, 255, 255, 0.8); display: block; margin-bottom: 0.5rem; font-size: 0.9rem;">Email Address</label>
                    <input type="email" style="width: 100%; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 1.1rem; color: white; outline: none; transition: all 0.3s;" placeholder="name@company.com" required>
                </div>
                <div style="margin-bottom: 2rem;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <label style="color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">Password</label>
                        <a href="#" style="color: var(--primary-light); font-size: 0.8rem; text-decoration: none;">Forgot password?</a>
                    </div>
                    <input type="password" style="width: 100%; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 1.1rem; color: white; outline: none; transition: all 0.3s;" placeholder="••••••••" required>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center; padding: 1.1rem; font-size: 1.1rem; margin-bottom: 1.5rem;">Continue to Learning</button>
            </form>

            <div style="text-align: center; margin-top: 1.5rem;">
                <p style="color: rgba(255, 255, 255, 0.5); font-size: 0.95rem;">New to InnoLearn? <a href="{{ path('app_signup') }}" style="color: white; font-weight: 600; text-decoration: none; border-bottom: 2px solid var(--primary);">Join now</a></p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const shackle = document.querySelector('.lock-shackle');
            const container = document.querySelector('.lock-container');
            
            // Trigger animation
            shackle.style.transform = 'translateY(-8px) rotate(-20deg)';
            container.style.color = 'var(--secondary-light)';
            container.style.filter = 'drop-shadow(0 0 40px rgba(168, 85, 247, 0.5))';

            // Wait for animation before redirect (simulated for now)
            setTimeout(() => {
                alert('Success! Redirecting...');
            }, 800);
        });
    </script>
</main>
{% endblock %}
