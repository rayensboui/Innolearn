{# templates/frontend/project/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - InnoLearn{% endblock %}

{% block body %}
<div class="relative z-10 w-full overflow-hidden">
    <!-- Bouton retour amélioré -->
    <div class="container mx-auto px-4 pt-24 pb-8">
        <a href="{{ path('app_frontend_project_index') }}" 
           class="inline-flex items-center text-slate-400 hover:text-white transition-all duration-300 group">
            <div class="mr-3 p-2 rounded-lg bg-white/5 group-hover:bg-white/10 transition-colors">
                <i class="fas fa-arrow-left text-sm group-hover:-translate-x-0.5 transition-transform"></i>
            </div>
            <span class="font-medium">Retour aux projets</span>
        </a>
    </div>

    <!-- Détail du projet -->
    <section class="max-w-6xl mx-auto px-4 py-10">
        <!-- En-tête du projet amélioré -->
        <div class="glass-panel p-8 mb-10 border border-white/5">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
                <div class="flex-1">
                    <!-- Badge avec animation -->
                    <div class="inline-flex items-center mb-4 animate-fade-in">
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold
                            {% if project.status == 'active' %}bg-green-500/15 text-green-400 border border-green-500/30
                            {% elseif project.status == 'completed' %}bg-blue-500/15 text-blue-400 border border-blue-500/30
                            {% elseif project.status == 'draft' %}bg-gray-500/15 text-gray-400 border border-gray-500/30
                            {% else %}bg-red-500/15 text-red-400 border border-red-500/30{% endif %}">
                            <span class="w-2 h-2 rounded-full mr-2 
                                {% if project.status == 'active' %}bg-green-400
                                {% elseif project.status == 'completed' %}bg-blue-400
                                {% elseif project.status == 'draft' %}bg-gray-400
                                {% else %}bg-red-400{% endif %} 
                                animate-pulse"></span>
                            {% if project.status == 'active' %}Projet Actif
                            {% elseif project.status == 'completed' %}Projet Terminé
                            {% elseif project.status == 'draft' %}En Préparation
                            {% else %}Projet Annulé{% endif %}
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 tracking-tight">
                        {{ project.title }}
                    </h1>
                </div>
                <div class="text-right mt-4 md:mt-0">
                    <div class="inline-block p-3 rounded-xl bg-gradient-to-br from-white/5 to-transparent border border-white/10">
                        <div class="text-2xl font-bold text-white mb-1 font-mono">#{{ project.id|slice(0, 8) }}</div>
                        <div class="text-slate-400 text-xs tracking-wide">ID PROJET</div>
                    </div>
                </div>
            </div>
            
            <!-- Description avec icône -->
            <div class="flex items-start space-x-4 mb-8">
                <div class="mt-1 p-2 rounded-lg bg-blue-500/10">
                    <i class="fas fa-info-circle text-blue-400 text-lg"></i>
                </div>
                <p class="text-slate-300 text-lg leading-relaxed flex-1">
                    {{ project.description }}
                </p>
            </div>
        </div>

        <!-- Informations détaillées avec améliorations visuelles -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
            {% set infoCards = [
                {icon: 'calendar-alt', label: 'Date de début', value: project.startDate|date('d/m/Y'), color: 'green'},
                {icon: 'calendar-check', label: 'Date de fin', value: project.endDate ? project.endDate|date('d/m/Y') : 'Non définie', color: project.endDate ? 'blue' : 'gray'},
                {icon: 'plus-circle', label: 'Créé le', value: project.createdAt|date('d/m/Y'), color: 'purple'},
                {icon: 'sync-alt', label: 'Dernière mise à jour', value: project.updatedAt ? project.updatedAt|date('d/m/Y') : project.createdAt|date('d/m/Y'), color: 'yellow'}
            ] %}
            
            {% for card in infoCards %}
            <div class="glass-panel p-6 border border-white/5 hover:border-white/10 transition-all duration-300 group hover:transform hover:-translate-y-1">
                <div class="flex items-center mb-3">
                    <div class="p-2 rounded-lg bg-{{ card.color }}-500/10 mr-3 group-hover:scale-110 transition-transform">
                        <i class="fas fa-{{ card.icon }} text-{{ card.color }}-400"></i>
                    </div>
                    <div class="text-slate-400 text-sm font-medium">{{ card.label }}</div>
                </div>
                <div class="text-2xl font-bold text-white font-mono {% if not project.endDate and card.label == 'Date de fin' %}text-slate-500{% endif %}">
                    {{ card.value }}
                </div>
                {% if card.label == 'Date de fin' and project.endDate %}
                <div class="mt-2 text-xs text-slate-500">
                    {% set daysLeft = date(project.endDate).diff(date('now')).days %}
                    {% if daysLeft > 0 %}
                        {{ daysLeft }} jours restants
                    {% elseif daysLeft == 0 %}
                        Dernier jour
                    {% else %}
                        Projet terminé
                    {% endif %}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>

        <!-- Section description complète améliorée -->
        <div class="glass-panel p-8 mb-10 border border-white/5">
            <div class="flex items-center mb-6">
                <div class="p-2 rounded-lg bg-gradient-to-r from-blue-500/20 to-purple-500/20 mr-4">
                    <i class="fas fa-file-alt text-blue-400"></i>
                </div>
                <h2 class="text-2xl font-bold text-white">Description détaillée</h2>
            </div>
            <div class="prose prose-invert max-w-none">
                <div class="p-6 rounded-lg bg-white/5 border border-white/10">
                    <div class="text-slate-300 leading-relaxed whitespace-pre-line space-y-4">
                        {{ project.description }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Boutons d'action améliorés -->
        <div class="flex flex-wrap gap-4 justify-center md:justify-end mt-12">
            <a href="{{ path('app_frontend_project_index') }}" 
               class="group inline-flex items-center px-6 py-3 rounded-lg border border-white/20 text-white hover:bg-white/10 transition-all duration-300 hover:border-white/30 hover:shadow-lg hover:shadow-white/5">
                <div class="mr-3 group-hover:rotate-12 transition-transform">
                    <i class="fas fa-layer-group"></i>
                </div>
                <span class="font-medium">Tous les projets</span>
            </a>
            <button onclick="window.history.back()" 
                    class="group inline-flex items-center px-6 py-3 rounded-lg border border-white/20 text-white hover:bg-white/10 transition-all duration-300 hover:border-white/30">
                <div class="mr-3 group-hover:-translate-x-1 transition-transform">
                    <i class="fas fa-arrow-left"></i>
                </div>
                <span class="font-medium">Retour</span>
            </button>
            {% if project.status == 'active' %}
            <a href="#" 
               class="group inline-flex items-center px-6 py-3 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium hover:shadow-lg hover:shadow-blue-500/25 transition-all duration-300">
                <div class="mr-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-rocket"></i>
                </div>
                <span>Participer au projet</span>
            </a>
            {% endif %}
        </div>
    </section>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @keyframes fade-in {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
        animation: fade-in 0.6s ease-out forwards;
    }
    
    .glass-panel {
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
    }
    
    .prose-invert p {
        margin-bottom: 1em;
    }
    
    .prose-invert p:last-child {
        margin-bottom: 0;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Animation améliorée au chargement
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.glass-panel');
        const title = document.querySelector('h1');
        
        // Animation du titre
        if (title) {
            title.style.opacity = '0';
            title.style.transform = 'translateY(20px)';
            setTimeout(() => {
                title.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                title.style.opacity = '1';
                title.style.transform = 'translateY(0)';
            }, 200);
        }
        
        // Animation des cartes en cascade
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px) scale(0.98)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease, border-color 0.3s ease';
            
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0) scale(1)';
            }, 300 + (index * 150));
        });
        
        // Effet de survol pour les cartes d'info
        const infoCards = document.querySelectorAll('.glass-panel.p-6');
        infoCards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                const icon = card.querySelector('.p-2.rounded-lg');
                if (icon) {
                    icon.style.transform = 'scale(1.1)';
                }
            });
            
            card.addEventListener('mouseleave', () => {
                const icon = card.querySelector('.p-2.rounded-lg');
                if (icon) {
                    icon.style.transform = 'scale(1)';
                }
            });
        });
    });
</script>
{% endblock %}